<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="75dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/title"
                android:paddingEnd="8dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:layout_height="75dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/domain"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                app:layout_constraintStart_toEndOf="@id/thumbnail"
                tools:text="imgur.com"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/domain"
                app:layout_constraintStart_toStartOf="@id/domain"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/postTitle"
                tools:text="This is the title of the post"/>

            <TextView
                android:id="@+id/info"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                tools:text="r/funny â€¢ UserDude"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/comments"
                tools:text="5000 comments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <ImageView
                android:id="@+id/upvote"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/upvote_icon"
                app:layout_constraintEnd_toStartOf="@id/score"
                app:layout_constraintTop_toTopOf="@id/score"
                app:layout_constraintBottom_toBottomOf="@id/score"/>

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/downvote"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                tools:text="54.5k"
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/downvote"
                app:layout_constraintTop_toTopOf="@id/score"
                app:layout_constraintBottom_toBottomOf="@id/score"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/downvote_icon"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</FrameLayout>