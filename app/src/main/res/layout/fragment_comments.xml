<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/post_title"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        tools:text="This is the title of the post"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/thumbnail"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/upvote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/score"
        app:layout_constraintBottom_toBottomOf="@id/score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/upvote_icon"
        android:layout_marginLeft="8dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/post_title"
        app:layout_constraintStart_toEndOf="@id/upvote"
        android:textSize="16sp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        tools:text="54.5k"
        android:layout_marginTop="8dp"
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/downvote"
        app:layout_constraintTop_toTopOf="@id/score"
        app:layout_constraintBottom_toBottomOf="@id/score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/downvote_icon"
        app:layout_constraintStart_toEndOf="@id/score"/>
    
    <ImageView
        android:id="@+id/thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:src="@tools:sample/backgrounds/scenic"
        android:layout_marginRight="8dp"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_line_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="score, thumbnail"/>

    <View
        android:id="@+id/header_line"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/header_line_barrier"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ProgressBar
        app:layout_constraintTop_toBottomOf="@id/header_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/comment_item"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>
