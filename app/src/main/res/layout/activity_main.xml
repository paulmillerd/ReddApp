<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/listing_picker_fragment_frame"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize">

        <fragment
            android:id="@+id/listing_picker_fragment"
            android:layout_width="match_parent"
            android:name="com.paulmillerd.redditapp.ui.listingPicker.ListingPickerFragment"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <fragment
        android:id="@+id/listing_fragment"
        android:name="com.paulmillerd.redditapp.ui.listing.ListingFragment"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/listing_picker_fragment_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <requestFocus />
    </fragment>

</android.support.constraint.ConstraintLayout>